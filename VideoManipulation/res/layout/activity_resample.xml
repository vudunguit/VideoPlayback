<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEFEFE" >
        
    <ImageView
        android:id="@+id/selected_video_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:contentDescription="@string/selected_video_thumbnail" />
    
    <TextView
        android:id="@+id/selected_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/selected_video_resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/selected_video_bitrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/selected_video_framerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/selected_video_iframeinterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
 
    <Spinner
        android:id="@+id/resolutionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
 
    <Spinner
        android:id="@+id/bitRateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
 
    <Spinner
        android:id="@+id/frameRateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
 
    <Spinner
        android:id="@+id/IFrameIntervalSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:text="Resample"
        android:onClick="onResampleClicked" />

</LinearLayout>
